<% if @raid %>
<div class="add-btn">
<%= link_to "#{t('add_child')}", new_raid_child_begger_path(@raid), class: 'btn btn-primary btn-xs' %>
</div>
<%end%>
<table id="datatable" class="table table-striped table-hover">
  <thead>
    <tr>
       <th><%=t('action')%></th>
      <th><%=t('id')%></th>
      <th><%=t('name')%></th>
      <th><%=t('age')%></th>
      <th><%=t('father_name')%></th>
      <th><%=t('mother_name')%></th>
      <th><%=t('raid_title')%></th>
      <th><%=t('raid_date')%></th>
    </tr>
  </thead>

  <tbody>
    <% @child_beggers.each do |child_begger| %>
      <tr>
        <td class="md">
          <div>
          <%= link_to '#', class: "dropdown-toggle", :'data-toggle'=> "dropdown" do %><i class="fa fa-caret-right fa-2x"></i><%end%>
          <ul class="dropdown-menu dropdown-menu-action">
            <li><%= link_to "#{t('edit')}", edit_raid_child_begger_path(child_begger.raid, child_begger) %></li>
            <li><%= link_to "#{t('destroy')}", [child_begger.raid,child_begger], method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
          </div>
        </td>
        <td><%= child_begger.id %></td>
        <td><%= link_to child_begger.full_name, edit_raid_child_begger_path(child_begger.raid, child_begger) %></td>
        <td><%= child_begger.age %></td>
        <td><%= child_begger.father_name %></td>
        <td><%= child_begger.mother_name %></td>
        <td class="md"><%= child_begger.raid.title %></td>
        <td class="en"><%= child_begger.raid.datetime.strftime('%d/%m/%Y')%></td>
      </tr>
    <% end %>
  </tbody>
</table>