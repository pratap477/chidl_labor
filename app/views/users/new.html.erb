<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-4">
		<%= bootstrap_form_for(@user) do |f| %>
		<%= render 'form', f: f, user: @user%>
		<%= f.email_field :email,label:"#{t('email')}" ,placeholder:"#{t('email')}", class: 'en' %>
		<%= f.password_field :password, label:"#{t('password')}" ,placeholder:"#{t('password')}", class: 'en' %>
		<%= f.submit "#{t('save')}", class: 'btn btn-primary' %>
		<% end %>
	</div>
</div>