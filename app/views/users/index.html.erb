<div class="add-btn">
<%= link_to t('new_user'), new_user_path, class: 'btn btn-primary btn-xs' %>
</div>
<table id="datatable" class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%=t('action')%></th>
      <th><%=t('id')%></th>
      <th><%=t('title')%></th>
      <th><%=t('name')%></th>
      <th><%=t('role')%></th>
      <th><%=t('department')%></th>
      <th><%=t('designation')%></th>
      <th><%=t('email')%></th>
      <th><%=t('attained_raid')%></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td class="md">
        <div>
          <%= link_to '#', class: "dropdown-toggle", :'data-toggle'=> "dropdown" do %><i class="fa fa-caret-right fa-2x"></i><%end%>
          <ul class="dropdown-menu dropdown-menu-action">
            <li><%= link_to "#{t('edit')}", edit_user_path(user) %></li>
            <li><%= link_to "#{t('destroy')}", user, method: :delete, data: { confirm: 'Are you sure?' } unless (current_user.eql? user) || (user.is_primary) %></li>
          </ul>
        </div>
      </td>
      <td><%= user.id %></td>
      <td class="md"><%= user.title %></td>
      <td><%= link_to user.full_name, edit_user_path(user) %></td>
      <td class="md"><%= user.roles %></td>
      <td class="md"><%= user.departments %></td>
      <td><%= user.designation %></td>
      <td class="en"><%= user.email %></td>
      <td class="md"><%= link_to "#{t('details')}",user_path(user)%></td>
    </tr>
    <% end %>
  </tbody>
</table>