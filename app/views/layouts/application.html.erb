<!DOCTYPE html>
<html>
<head>
  <title>ICL</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<% if user_signed_in? %>
<body>
	<%= render 'layouts/messages'%>
	<%= render 'layouts/index'%>
</body>
<% else %>
<body class="outer-body">
	<%= render 'layouts/messages'%>
	<%= yield%>
</body>
<%end%>
</html>
