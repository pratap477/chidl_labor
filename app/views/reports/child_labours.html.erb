
<div class="add-btn">
<%= link_to "#{t('download_pdf')}",'#',onclick:'getval()', class: 'btn btn-primary btn-xs'%>
</div>

<table id="datatable" class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%=t('select')%><%=link_to "#{t('select_all')}", '#', onclick: "selectAll();" %>
       <%=link_to "#{t('select_none')}", '#', onclick: "unselectAll();" %></th>
      <th><%=t('id')%></th>
      <th><%=t('name')%></th>
      <th><%=t('age')%></th>
      <th><%=t('father_name')%></th>
      <th><%=t('mother_name')%></th>
      <th><%=t('title')%></th>
      <th><%=t('raid_date')%></th>
    </tr>
  </thead>
  <tbody>
    <% @child_labours.each do |child_labour| %>
      <tr>
        <td><%= check_box_tag :child, child_labour.id, false, class: 'check_box' %></td>
        <td><%= child_labour.id %></td>
        <td><%= link_to child_labour.full_name, panchnama_report_path(child_labour) %></td>
        <td><%= child_labour.age %></td>
        <td><%= child_labour.father_name %></td>
        <td><%= child_labour.mother_name %></td>
        <td class="md"><%= child_labour.raid.title %></td>
        <td class="en"><%= child_labour.raid.datetime.strftime('%d/%m/%Y')%></td>
      </tr>
    <% end %>
  </tbody>
</table>
