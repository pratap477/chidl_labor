<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <%= wicked_pdf_stylesheet_link_tag 'application' -%>
  </head>
  <body>
    <div class="container">
      <div class="col-md-12">
        <%= wicked_pdf_image_tag 'Logo.jpg',class: 'logo'%>
      </div>
    </div><br/>
  <div class="container inter-body">
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th><%=t('sr_no')%></th>
      <th><%=t('raid_id')%></th>
      <th><%=t('title')%></th>
      <th><%=t('employer_name_and_address')%></th>
      <th colspan="2"><%=t('child_labour_name_and_age')%></th>
      <th><%=t('police_station')%></th>
      <th><%=t('location')%></th>
    </tr>
  </thead>
  <tbody>
  	<% @raids.each_with_index do |raid, i|%>
    <tr>
    	<td><%= i+1 %></td>
    	<td><%= raid.id %></td>
    	<td class="md"><%= raid.title %></td>
    	<td><%= raid.employer_name %><br/>
          <%= raid.employer_address %></td>
    	<td><%= (child_beggers(raid)[0]).html_safe %></td>
      <td><%= (child_beggers(raid)[1]).html_safe %></td>
      <td class="md"><%= raid.department %></td>
      <td><%= raid.location.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</body>
</html>