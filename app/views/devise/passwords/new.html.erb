<div class="middle-box text-center loginscreen">
  <div>
    <div>
       <h1><%= image_tag 'Logo.jpg', class: 'logo'%></h1>
    </div>
    <h3><%=t('forgot_password')%></h3>
    <div style="text-align:left">
	<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "m-t" }) do |f| %>
    <%= f.email_field :email, label:"#{t('email')}",autofocus: true, placeholder:"#{t('email')}", class: 'en' %>
    <%= f.submit t('send_password_instruction'), class: "btn btn-primary block full-width m-b"%>
    <% end %>
    </div><br/>
    <%= render "devise/shared/links" %>
  </div>
</div>